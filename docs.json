{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mallory",
  "colors": {
    "primary": "#005CFF",
    "light": "#135FFF",
    "dark": "#0042B8"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "First steps",
            "pages": ["index", "quickstart", "concepts", "changelog"]
          },
          {
            "group": "Use Mallory",
            "pages": [
              "use/chat",
              "use/current-events",
              "use/entities",
              "use/indicators"
            ]
          },
          {
            "group": "Build & integrate",
            "pages": [
              "build/auth",
              "build/search-syntax",
              "build/errors",
              "build/exports",
              "build/exports/vuln-intel-format",
              "build/exports/ioc-intel-format",
              "build/monitoring",
              "build/integrations",
              "build/mcp"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "openapi": "https://api.mallory.ai/openapi.json",
        "groups": [
          {
            "group": "Overview",
            "pages": ["api-reference/introduction"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [{ "label": "Support", "href": "mailto:support@mallory.ai" }],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.mallory.ai"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/malloryai",
      "github": "https://github.com/malloryai",
      "linkedin": "https://linkedin.com/company/malloryai"
    }
  }
}
